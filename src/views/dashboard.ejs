<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/index.css" />
    <title>Dashboard</title>
  </head>

  <body class="bg-body-tertiary">
    <header class="border-bottom mb-4">
      <nav class="container navbar navbar-light bg-light navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand fw-bold fs-3" href="#">DASHBOARD</a>

          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div
            class="collapse navbar-collapse justify-content-end"
            id="navbarNav"
          >
            <ul class="navbar-nav align-items-center gap-3">
              <li class="nav-item">
                <a class="nav-link" href="/">Achados e Perdidos</a>
              </li>
              <li class="nav-item">
                <button
                  onclick="logout()"
                  type="button"
                  class="btn btn-outline-danger"
                >
                  Sair
                </button>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="w-100">
      <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="fs-3 m-0">Meus Itens Perdidos</h2>
          <button class="btn btn-primary" onclick="criarObjeto()">
            Criar Novo
          </button>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered table-striped align-middle">
            <thead>
              <tr>
                <th>Imagem</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Local da Perda</th>
                <th>Data da Perda</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody id="tabelaObjetos">
              <% objetos.forEach(obj => { %>
              <tr>
                <td>
                  <% if (obj.Pictures.length > 0) { %>
                  <img
                    src="/public/<%= obj.Pictures[0].img %>"
                    alt="<%= obj.name %>"
                    style="height: 60px; object-fit: cover"
                    class="rounded shadow-sm"
                  />
                  <% } %>
                </td>
                <td><%= obj.name %></td>
                <td><%= obj.description %></td>
                <td><%= obj.category %></td>
                <td><%= obj.location_of_loss %></td>
                <td><%= obj.date_of_loss %></td>
                <td>
                  <button
                    class="btn btn-sm btn-warning me-1"
                    onclick="editarObjeto(this)"
                    data-id="<%= obj.id %>"
                    data-name="<%= obj.name %>"
                    data-description="<%= obj.description %>"
                    data-category="<%= obj.category %>"
                    data-location="<%= obj.location_of_loss %>"
                    data-date="<%= obj.date_of_loss %>"
                  >
                    Editar
                  </button>

                  <form
                    action="/object/deleteObject/<%= obj.id %>"
                    method="POST"
                    style="display: inline"
                    onsubmit="return confirm('Tem certeza que deseja excluir este objeto?');"
                  >
                    <button type="submit" class="btn btn-sm btn-danger">
                      Excluir
                    </button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <!-- Modal de criação de objeto -->
    <div
      class="modal fade"
      id="criarModal"
      tabindex="-1"
      aria-labelledby="criarModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <form
            action="/object/create"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="modal-header">
              <h5 class="modal-title" id="criarModalLabel">Novo Objeto</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Fechar"
              ></button>
            </div>

            <div class="modal-body">
              <div class="mb-3">
                <label for="criarNome" class="form-label">Nome</label>
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  id="criarNome"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="criarDescricao" class="form-label">Descrição</label>
                <textarea
                  name="description"
                  class="form-control"
                  id="criarDescricao"
                  rows="3"
                  required
                ></textarea>
              </div>

              <div class="mb-3">
                <label for="criarCategoria" class="form-label">Categoria</label>
                <select
                  name="category"
                  class="form-select"
                  id="criarCategoria"
                  required
                >
                  <option selected disabled value="">
                    Escolha uma categoria
                  </option>
                  <option value="Eletrônico">Eletrônico</option>
                  <option value="Documento">Roupa</option>
                  <option value="Acessório">Acessório</option>
                  <option value="Roupas">Documentos</option>
                  <option value="Outro">Outro</option>
                </select>
              </div>

              <div class="mb-3">
                <label for="criarLocal" class="form-label"
                  >Local da perda</label
                >
                <input
                  type="text"
                  name="location_of_loss"
                  class="form-control"
                  id="criarLocal"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="criarData" class="form-label">Data da perda</label>
                <input
                  type="date"
                  name="date_of_loss"
                  class="form-control"
                  id="criarData"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="criarImagens" class="form-label">Imagens</label>
                <input
                  type="file"
                  name="objectPicture"
                  class="form-control"
                  id="criarImagens"
                  multiple
                />
              </div>
            </div>

            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancelar
              </button>
              <button type="submit" class="btn btn-primary">Criar</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Modal de Edição de objeto -->
    <div
      class="modal fade"
      id="editarModal"
      tabindex="-1"
      aria-labelledby="editarModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <form
            action="#"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="modal-header">
              <h5 class="modal-title" id="editarModalLabel">Novo Objeto</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Fechar"
              ></button>
            </div>

            <div class="modal-body">
              <div class="mb-3">
                <label for="editarNome" class="form-label">Nome</label>
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  id="editarNome"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="editarDescricao" class="form-label"
                  >Descrição</label
                >
                <textarea
                  name="description"
                  class="form-control"
                  id="editarDescricao"
                  rows="3"
                  required
                ></textarea>
              </div>

              <div class="mb-3">
                <label for="editarCategoria" class="form-label"
                  >Categoria</label
                >
                <select
                  name="category"
                  class="form-select"
                  id="editarCategoria"
                  required
                >
                  <option selected disabled value="">
                    Escolha uma categoria
                  </option>
                  <option value="Eletrônico">Eletrônico</option>
                  <option value="Documento">Roupa</option>
                  <option value="Acessório">Acessório</option>
                  <option value="Roupas">Documentos</option>
                  <option value="Outro">Outro</option>
                </select>
              </div>

              <div class="mb-3">
                <label for="editarLocal" class="form-label"
                  >Local da perda</label
                >
                <input
                  type="text"
                  name="location_of_loss"
                  class="form-control"
                  id="editarLocal"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="editarData" class="form-label">Data da perda</label>
                <input
                  type="date"
                  name="date_of_loss"
                  class="form-control"
                  id="editarData"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="editarImagens" class="form-label">Imagens</label>
                <input
                  type="file"
                  name="objectPicture"
                  class="form-control"
                  id="editarImagens"
                  multiple
                />
              </div>
            </div>

            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancelar
              </button>
              <button type="submit" class="btn btn-primary">Editar</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
